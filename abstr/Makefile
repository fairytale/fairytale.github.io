knowledge.html: knowledge.md
	pandoc \
	-T 'Knowledge' \
	-V pagetitle='位 Abstraction' \
	-V date-meta=`date -I` \
	-V author-meta=Pasberth \
	-H ../pandoc/header.html \
	-V css=../pandoc/main.css \
	-s \
	-f markdown \
	-t html \
	knowledge.md \
	-o knowledge.html
